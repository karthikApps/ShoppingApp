<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/alert_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/xxhdpi_10"
            android:layout_marginLeft="@dimen/xxhdpi_5"
            android:layout_marginRight="@dimen/xxhdpi_5"
            android:textSize="@dimen/t_xxh_16"
            android:fontFamily="@font/segoeui_1"
            android:hint="Enter Name"
            android:layout_marginTop="@dimen/xxhdpi_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lit_grey"
            android:layout_marginTop="@dimen/xxhdpi_5"/>

        <EditText
            android:id="@+id/alert_street_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/xxhdpi_10"
            android:layout_marginLeft="@dimen/xxhdpi_5"
            android:layout_marginRight="@dimen/xxhdpi_5"
            android:textSize="@dimen/t_xxh_16"
            android:fontFamily="@font/segoeui_1"
            android:hint="Street Name"
            android:layout_marginTop="@dimen/xxhdpi_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lit_grey"
            android:layout_marginTop="@dimen/xxhdpi_5"/>

        <EditText
            android:id="@+id/alert_city_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/xxhdpi_10"
            android:layout_marginLeft="@dimen/xxhdpi_5"
            android:layout_marginRight="@dimen/xxhdpi_5"
            android:textSize="@dimen/t_xxh_16"
            android:fontFamily="@font/segoeui_1"
            android:hint="City"
            android:layout_marginTop="@dimen/xxhdpi_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lit_grey"
            android:layout_marginTop="@dimen/xxhdpi_5"/>

        <EditText
            android:id="@+id/alert_state_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/xxhdpi_10"
            android:layout_marginLeft="@dimen/xxhdpi_5"
            android:layout_marginRight="@dimen/xxhdpi_5"
            android:textSize="@dimen/t_xxh_16"
            android:fontFamily="@font/segoeui_1"
            android:hint="State"
            android:layout_marginTop="@dimen/xxhdpi_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lit_grey"
            android:layout_marginTop="@dimen/xxhdpi_5"/>

        <EditText
            android:id="@+id/alert_pincode_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/xxhdpi_10"
            android:maxLength="6"
            android:layout_marginLeft="@dimen/xxhdpi_5"
            android:layout_marginRight="@dimen/xxhdpi_5"
            android:layout_marginBottom="@dimen/xxhdpi_10"
            android:textSize="@dimen/t_xxh_16"
            android:fontFamily="@font/segoeui_1"
            android:hint="Pin Code"
            android:inputType="number"
            android:layout_marginTop="@dimen/xxhdpi_10"/>

        <TextView
            android:id="@+id/profile_add_address_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Address"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:padding="@dimen/xxhdpi_10"
            android:gravity="center"
            android:fontFamily="@font/segoeuib_1"
            android:textSize="@dimen/t_xxh_18"/>


    </LinearLayout>

</android.support.v7.widget.CardView>